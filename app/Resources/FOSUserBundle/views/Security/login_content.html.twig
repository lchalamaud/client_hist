{% trans_default_domain 'FOSUserBundle' %}


<div id='content'>
    <h1>{{ 'layout.login'|trans }}</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="username">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="{{ 'security.login.username'|trans }}" />
        </div>
        <div class="password">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="{{ 'security.login.password'|trans }}" />
        </div>
        <div class='remember_me'>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <h3>{{ 'security.login.remember_me'|trans }}</h3>
        </div>
        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="button"/>
        
    </form>

    <a href="{{ path('fos_user_resetting_request') }}" id="mdpReset">{{ 'login.forgot_password'|trans({}, 'messages') }}?</a>
</div>
